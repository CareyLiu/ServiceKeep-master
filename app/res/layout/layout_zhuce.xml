<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/timg">


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="62dp"
            android:background="#00000000"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/back_zhuce"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"


                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="19dp"
                        android:layout_marginTop="50dp"
                        android:text="身份证号码"
                        android:textColor="#ff666666"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/tv_shenfenzhenghao"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="19dp"
                        android:layout_marginTop="10dp"
                        android:background="@null"
                        android:ellipsize="end"
                        android:hint="请输入访客身份证号"
                        android:textColor="#ff000000"
                        android:textColorHint="#CCCCCC"
                        android:textSize="13sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="19dp"
                        android:layout_marginTop="10dp"
                        android:background="#DCDCDC" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="19dp"

                        android:text="姓名"
                        android:textColor="#ff666666"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/tv_xingming"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="19dp"
                        android:layout_marginTop="10dp"
                        android:background="@null"
                        android:ellipsize="end"
                        android:hint="请输入姓名"
                        android:textColor="#ff000000"
                        android:textColorHint="#CCCCCC"
                        android:textSize="13sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="19dp"
                        android:layout_marginTop="10dp"
                        android:background="#DCDCDC" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="19dp"

                        android:text="手机号"
                        android:textColor="#ff666666"
                        android:textSize="14sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/tv_shoujihao"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="19dp"
                            android:layout_marginTop="10dp"
                            android:background="@null"
                            android:ellipsize="end"
                            android:hint="请输入手机号"
                            android:inputType="phone"
                            android:textColor="#ff000000"
                            android:textColorHint="#CCCCCC"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tv_getcode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:text="获取验证码"
                            android:textColor="#ff0d8bf1"
                            android:textSize="14sp" />
                    </RelativeLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="19dp"
                        android:layout_marginTop="10dp"
                        android:background="#DCDCDC" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="19dp"

                        android:text="验证码"
                        android:textColor="#ff666666"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/tvyanzhegnma"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="19dp"
                        android:layout_marginTop="10dp"
                        android:background="@null"
                        android:ellipsize="end"
                        android:hint="请输入验证码"
                        android:inputType="number"
                        android:textColor="#ff000000"
                        android:textColorHint="#CCCCCC"
                        android:textSize="13sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="19dp"
                        android:layout_marginTop="10dp"
                        android:background="#DCDCDC" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="19dp"

                        android:text="访客单位"
                        android:textColor="#ff666666"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/tv_fangkedanwei"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="19dp"
                        android:layout_marginTop="10dp"
                        android:background="@null"
                        android:ellipsize="end"
                        android:hint="请输入访客单位"
                        android:textColor="#ff000000"
                        android:textColorHint="#CCCCCC"
                        android:textSize="13sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="19dp"
                        android:layout_marginTop="10dp"
                        android:background="#DCDCDC" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="19dp"

                        android:text="车辆信息"
                        android:textColor="#ff666666"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/tv_cheliangxinxi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="19dp"
                        android:layout_marginTop="10dp"
                        android:background="@null"
                        android:ellipsize="end"
                        android:hint="请输入车辆信息"
                        android:textColor="#ff000000"
                        android:textColorHint="#CCCCCC"
                        android:textSize="13sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginHorizontal="19dp"
                        android:layout_marginTop="10dp"
                        android:background="#DCDCDC" />

                </LinearLayout>


                <com.flyco.roundview.RoundRelativeLayout
                    android:id="@+id/rrl_qubaifang"
                    android:layout_width="293dp"
                    android:layout_height="38dp"
                    android:layout_marginTop="15dp"
                    app:rv_backgroundColor="#0D8BF1"
                    app:rv_cornerRadius="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="访客模式"
                        android:textColor="#ffffffff"
                        android:textSize="17sp" />


                </com.flyco.roundview.RoundRelativeLayout>


            </LinearLayout>

            <ImageView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/logo" />
        </RelativeLayout>


    </RelativeLayout>


</ScrollView>